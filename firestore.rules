rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    match /users/{userId} {
      allow read, update, delete: if isOwner(userId) || isAdmin();
      allow create: if request.auth.uid == userId;
      allow list: if isAdmin();
    }

    match /batches/{batchId} {
        allow get: if isSignedIn();
        // Admins can list all batches.
        // Other users can only list batches if they are querying by their own farmerUID.
        allow list: if isAdmin() || (isSignedIn() && request.query.where.size() > 0 && request.query.where[0].field == 'farmerUID' && request.query.where[0].value == request.auth.uid);
        allow create, update, delete: if request.auth.uid == request.resource.data.farmerUID || isAdmin();
    }


    match /batches/{batchId}/dailyRecords/{recordId} {
        allow read, write: if get(/databases/$(database)/documents/batches/$(batchId)).data.farmerUID == request.auth.uid || isAdmin();
    }

    match /inventory/{itemId} {
        allow read: if request.auth.uid == resource.data.farmerUID || isAdmin();
        // Rules for write (create, update, delete) should be more specific
        allow write: if request.auth.uid == request.resource.data.farmerUID; 
    }
    
    match /dealerInventory/{itemId} {
        allow read: if isSignedIn();
        allow write: if request.auth.uid == request.resource.data.dealerUID || isAdmin();
    }
    
    match /connections/{connectionId} {
        allow read, write: if isSignedIn();
    }
    
    match /orders/{orderId} {
        allow read, write: if isSignedIn();
    }

    match /ledger/{entryId} {
        allow read, write: if request.auth.uid == resource.data.userId || isAdmin();
    }
    
    match /dailyRates/{date} {
        allow read: if isSignedIn();
        allow write: if isAdmin();
    }

    match /audit_logs/{logId} {
        allow read, write: if isAdmin();
    }

    match /roles_admin/{userId} {
      allow read: if isSignedIn();
    }
  }
}
