rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    function isAdmin() {
      return request.auth != null && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      // Allow create if the user is creating their own document.
      allow create: if request.auth != null && request.resource.data.id == request.auth.uid;
      allow update, delete: if isOwner(userId) || isAdmin();
    }
    
    match /roles_admin/{userId} {
      allow read, write: if isAdmin();
    }

    match /batches/{batchId} {
      allow read, write: if isOwner(resource.data.farmerUID) || isAdmin();
      allow create: if isOwner(request.resource.data.farmerUID) || isAdmin();
    }
    
    match /batches/{batchId}/dailyRecords/{recordId} {
      allow read, write: if get(/databases/$(database)/documents/batches/$(batchId)).data.farmerUID == request.auth.uid || isAdmin();
    }

    match /inventory/{itemId} {
      allow read, write: if isOwner(resource.data.farmerUID) || isAdmin();
      allow create: if isOwner(request.resource.data.farmerUID) || isAdmin();
    }

    match /dealerInventory/{itemId} {
      allow read, write: if isOwner(resource.data.dealerUID) || isAdmin();
      allow create: if isOwner(request.resource.data.dealerUID) || isAdmin();
    }

    match /ledger/{entryId} {
      allow read, write: if isOwner(resource.data.userId) || isAdmin();
      allow create: if isOwner(request.resource.data.userId) || isAdmin();
    }
    
    match /orders/{orderId} {
      allow read: if isOwner(resource.data.farmerUID) || isOwner(resource.data.dealerUID) || isAdmin();
      allow create: if isOwner(request.resource.data.farmerUID) || isOwner(request.resource.data.dealerUID) || isAdmin();
      allow update: if (isOwner(resource.data.farmerUID) || isOwner(resource.data.dealerUID) || isAdmin()) && resource.data.status == 'Pending';
    }
    
    match /connections/{connectionId} {
      allow read: if isOwner(resource.data.farmerUID) || isOwner(resource.data.dealerUID) || isAdmin();
      allow create: if isOwner(request.resource.data.farmerUID) || isOwner(request.resource.data.dealerUID) || isAdmin();
      allow update: if (isOwner(resource.data.farmerUID) || isOwner(resource.data.dealerUID) || isAdmin()) && resource.data.status == 'Pending';
    }

    match /dailyRates/{rateId} {
      allow read: if request.auth != null; // All authenticated users can read
      allow write: if isAdmin();
    }

    match /audit_logs/{logId} {
      allow read, write: if isAdmin();
    }
    
    // Fallback rule to deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
