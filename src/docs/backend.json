
{
  "entities": {
    "UserProfile": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "UserProfile",
      "type": "object",
      "description": "Represents a user profile in the PoultryMitra application.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the user profile."
        },
        "poultryMitraId": {
            "type": "string",
            "description": "A user-facing, unique, and indexable ID (e.g., PM-FARM-ABC12)."
        },
        "email": {
          "type": "string",
          "description": "Email address of the user.",
          "format": "email"
        },
        "name": {
          "type": "string",
          "description": "Full name of the user."
        },
        "role": {
          "type": "string",
          "description": "Role of the user (farmer, dealer, admin)."
        },
        "mobileNumber": {
          "type": "string",
          "description": "User's mobile phone number."
        },
        "state": {
            "type": "string",
            "description": "The state where the user resides."
        },
        "district": {
            "type": "string",
            "description": "The district where the user resides."
        },
        "pinCode": {
            "type": "string",
            "description": "The user's postal PIN code."
        },
        "planType": {
          "type": "string",
          "description": "The user's subscription plan (e.g., 'free', 'premium')."
        },
        "uniqueDealerCode": {
          "type": "string",
          "description": "A unique code assigned to dealers for farmers to connect with."
        },
        "connectedFarmers": {
            "type": "array",
            "description": "A list of farmer UIDs connected to this dealer.",
            "items": {
                "type": "string"
            }
        },
        "connectedDealers": {
            "type": "array",
            "description": "A list of dealer UIDs this farmer is connected to.",
            "items": {
                "type": "string"
            }
        },
        "dateJoined": {
          "type": "string",
          "format": "date-time",
          "description": "The date and time the user joined."
        }
      },
      "required": [
        "id",
        "email",
        "name",
        "role",
        "state",
        "district",
        "dateJoined"
      ]
    },
    "Farm": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Farm",
      "type": "object",
      "description": "Represents a poultry farm.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the farm."
        },
        "name": {
          "type": "string",
          "description": "Name of the farm."
        },
        "location": {
          "type": "string",
          "description": "Location of the farm."
        },
        "capacity": {
          "type": "number",
          "description": "Maximum capacity of the farm (number of birds)."
        }
      },
      "required": [
        "id",
        "name",
        "location",
        "capacity"
      ]
    },
    "SubscriptionPlan": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "SubscriptionPlan",
      "type": "object",
      "description": "Represents a subscription plan with different features.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the subscription plan."
        },
        "name": {
          "type": "string",
          "description": "Name of the subscription plan (e.g., Basic, Premium)."
        },
        "price": {
          "type": "number",
          "description": "Price of the subscription plan."
        },
        "features": {
          "type": "array",
          "description": "List of features included in the subscription plan.",
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "id",
        "name",
        "price",
        "features"
      ]
    },
    "FarmData": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "FarmData",
      "type": "object",
      "description": "Represents farm data collected over time.",
      "properties": {
        "id": { "type": "string", "description": "Unique identifier for the farm data entry." },
        "farmId": { "type": "string", "description": "Reference to Farm." },
        "timestamp": { "type": "string", "description": "Timestamp of the data collection.", "format": "date-time" },
        "temperature": { "type": "number", "description": "Temperature in Celsius." },
        "humidity": { "type": "number", "description": "Humidity in percentage." },
        "ammonia": { "type": "number", "description": "Ammonia level in ppm." },
        "productionRate": { "type": "number", "description": "Production rate of the farm (e.g., eggs per day)." },
        "mortalityRate": { "type": "number", "description": "Mortality rate of the farm." },
        "feedConsumption": { "type": "number", "description": "Feed consumption of the farm." }
      },
      "required": ["id", "farmId", "timestamp"]
    },
    "FarmAlert": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "FarmAlert",
      "type": "object",
      "description": "Represents a critical or warning alert for a farm.",
      "properties": {
        "id": { "type": "string", "description": "Unique identifier for the alert." },
        "farmId": { "type": "string", "description": "Reference to Farm." },
        "type": { "type": "string", "enum": ["critical", "warning"], "description": "The severity of the alert." },
        "message": { "type": "string", "description": "A descriptive message for the alert." },
        "timestamp": { "type": "string", "format": "date-time", "description": "When the alert was generated." },
        "isRead": { "type": "boolean", "description": "Whether the alert has been read by the user." }
      },
      "required": ["id", "farmId", "type", "message", "timestamp", "isRead"]
    },
    "Order": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Order",
      "type": "object",
      "description": "Represents an order between a dealer and a farmer.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the order."
        },
        "farmerUID": {
          "type": "string",
          "description": "Reference to UserProfile (farmer). (Relationship: UserProfile 1:N Order)"
        },
        "dealerUID": {
          "type": "string",
          "description": "Reference to UserProfile (dealer). (Relationship: UserProfile 1:N Order)"
        },
        "orderDate": {
          "type": "string",
          "description": "Date when the order was placed.",
          "format": "date-time"
        },
        "items": {
          "type": "array",
          "description": "List of items in the order.",
          "items": {
            "type": "string"
          }
        },
        "status": {
          "type": "string",
          "description": "Status of the order (e.g., pending, confirmed, shipped, delivered)."
        }
      },
      "required": [
        "id",
        "dealerUID",
        "orderDate",
        "items",
        "status"
      ]
    },
    "Supplier": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Supplier",
      "type": "object",
      "description": "Represents a supplier from whom a dealer purchases goods.",
      "properties": {
        "id": { "type": "string" },
        "dealerUID": { "type": "string", "description": "The UID of the dealer this supplier belongs to." },
        "name": { "type": "string" },
        "contactPerson": { "type": "string" },
        "contactNumber": { "type": "string" },
        "address": { "type": "string" },
        "gstin": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "dealerUID", "name", "createdAt"]
    },
    "Connection": {
        "$schema": "http://json-schema.org/draft-07/schema#",
        "title": "Connection",
        "type": "object",
        "description": "Represents a connection request or an established link between a farmer and a dealer.",
        "properties": {
            "id": { "type": "string" },
            "farmerUID": { "type": "string", "description": "The UID of the farmer." },
            "dealerUID": { "type": "string", "description": "The UID of the dealer." },
            "status": { "type": "string", "enum": ["Pending", "Approved", "Rejected"], "description": "The current status of the connection." },
            "requestedBy": { "type": "string", "enum": ["farmer", "dealer"], "description": "Indicates which role initiated the connection request." },
            "createdAt": { "type": "string", "format": "date-time" }
        },
        "required": ["id", "farmerUID", "dealerUID", "status", "requestedBy", "createdAt"]
    },
    "Diagnosis": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Diagnosis",
      "type": "object",
      "description": "Stores a saved AI health diagnosis report.",
      "properties": {
        "id": {
          "type": "string"
        },
        "input": {
          "type": "object",
          "description": "The input given to the AI."
        },
        "output": {
          "type": "object",
          "description": "The structured output from the AI."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": ["id", "input", "output", "createdAt"]
    }
  },
  "auth": {
    "providers": [
      "password",
      "google.com"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "UserProfile",
          "schema": {
            "$ref": "#/entities/UserProfile"
          }
        }
      },
      {
        "path": "/batches/{batchId}",
        "definition": {
            "entityName": "Batch",
            "schema": { "$ref": "#/entities/Batch" }
        }
      },
      {
        "path": "/batches/{batchId}/dailyRecords/{recordId}",
        "definition": {
            "entityName": "DailyRecord",
            "schema": { "$ref": "#/entities/DailyRecord" }
        }
      },
      {
        "path": "/farmData/{farmDataId}",
        "definition": {
          "entityName": "FarmData",
          "schema": {
            "$ref": "#/entities/FarmData"
          }
        }
      },
      {
        "path": "/farmAlerts/{alertId}",
        "definition": {
          "entityName": "FarmAlert",
          "schema": {
            "$ref": "#/entities/FarmAlert"
          }
        }
      },
      {
        "path": "/subscriptionPlans/{subscriptionPlanId}",
        "definition": {
          "entityName": "SubscriptionPlan",
          "schema": {
            "$ref": "#/entities/SubscriptionPlan"
          }
        }
      },
      {
        "path": "/orders/{orderId}",
        "definition": {
          "entityName": "Order",
          "schema": {
            "$ref": "#/entities/Order"
          }
        }
      },
      {
        "path": "/suppliers/{supplierId}",
        "definition": {
          "entityName": "Supplier",
          "schema": {
            "$ref": "#/entities/Supplier"
          }
        }
      },
      {
        "path": "/connections/{connectionId}",
        "definition": {
          "entityName": "Connection",
          "schema": { "$ref": "#/entities/Connection" }
        }
      },
      {
        "path": "/diagnoses/{diagnosisId}",
        "definition": {
          "entityName": "Diagnosis",
          "schema": {
            "$ref": "#/entities/Diagnosis"
          }
        }
      }
    ],
    "reasoning": "The Firestore structure is designed to be scalable and secure. Top-level collections are used for major entities like `users`, `batches`, `orders`, `suppliers`, `connections`, and `diagnoses` to allow for independent and efficient querying. Subcollections like `dailyRecords` are nested under `batches` for a clear hierarchical relationship. Security rules will be configured to ensure that users can only access their own data (e.g., a farmer can only see their own batches and connections), and dealers can only manage their own network and inventory. A top-level `connections` collection is used to manage the many-to-many relationship between farmers and dealers efficiently."
  }
}

    